<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/newLightHeader</item>
        <item name="colorPrimaryDark">@color/newLightStatusBar</item>
        <item name="colorAccent">@color/newLightHeader</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:itemBackground">@color/newLightHeader</item>
        <item name="android:itemTextAppearance">@color/whiteNavDrawerBackground</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/MyToolbarTheme</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>


</resources>
